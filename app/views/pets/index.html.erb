<h1>All pets</h1>
<% @pets.each do |photo| %>
  <h2><%= pet.name %></h2>
  <p>Width: <%= photo.width %></p>
  <p>Height: <%= photo.height %></p>
<% end %>

<%= link_to "More Info", pet %>
<%= link_to "New pet", new_pet_path %>

<h1>New Pet</h1>
<%= form_with model: @pet do |form| %>
  <div>
    <%= form.label :animal %>
    <%= form.text_field :animal %>
  </div>
  <div>
    <%= form.label :breed %>
    <%= form.text_field :breed %>
  </div>
  <div>
    <%= form.label :color %>
    <%= form.text_field :color %>
  </div>
  <div>
    <%= form.label :size %>
    <%= form.text_field :size %>
  </div>
  <div>
    <%= form.label :age %>
    <%= form.text_field :age %>
  </div>
 <div>
    <%= form.label :img_url %>
    <%= form.text_field :img_url %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end%>

