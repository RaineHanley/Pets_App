<!-- Use the Rails form_with helper to generate the form -->
<h1>Edit pet</h1>
<%= form_with model: @phetdo |form| %>
   <div>
    <%= form.label :animal %>
    <%= form.text_field :animal %>
  </div>
  <div>
    <%= form.label :breed %>
    <%= form.text_field :breed %>
  </div>
  <div>
    <%= form.label :color %>
    <%= form.text_field :color %>
  </div>
  <div>
    <%= form.label :size %>
    <%= form.text_field :size %>
  </div>
  <div>
    <%= form.label :age %>
    <%= form.text_field :age %>
  </div>
 <div>
    <%= form.label :img_url %>
    <%= form.text_field :img_url %>
  </div>
<% end%>